<section class="how-it-works">
    <div class="container">
        <h2 class="text-center mb-5 how-work">How it works</h2>
        <div class="row mb-5 text-center">
            <div class=" col-lg-6">
                <article>
                    <img class="account-icon" src="https://res.cloudinary.com/ironhack-project2/image/upload/v1606392311/project2/create-acount-removebg-preview_h4crm2.png" alt="account">
