<div class="container">

    <h2 class="mb-5">Farms List</h2>
    <div class="row mb-5">
        <div class=" col-md-6">
            <form action="/farms" method="GET" class="form-inline">
                <input class="form-control block mr-sm-2" type="search" placeholder="Search" aria-label="Search"
                    name="search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class="row">

        {{#each allFarms}}
        <div class="col-md-4 mb-5 ">
            <div class="card ">
                <img class="card-img-top img-farm-card" src="{{farmImg}}" alt="{{farmname}}">
                <div class="card-body ">
                    <h3 class=" card-header card-title mb-3">{{farmname}}</h3>
                    <p class="mb-3"><strong>The Owner: </strong> {{user.name}} {{user.surname}} </p>
                    <div class="d-flex">
                        <a class=" mr-2 btn btn-info" href="/farms/{{_id}}">View more</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
    <div class="row">
        <a class="mt-3 btn btn-outline-secondary" href="/">Go back to Index </a>
    </div>

</div>