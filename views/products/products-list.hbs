<div class="container">

    <h2 class="mb-5">Products List</h2>

    <div class="row">

        {{!-- {{#each allProducts}} --}}
        <div class="col-md-4 mb-5 ">
            <div class="card ">
                <div class="card-body ">
                    <img class="card-img-top" src="{{productImg}}" alt="{{name}}">
                    <h3 class=" card-header card-title mb-5">{{name}}</h3>
                    <div class="d-flex">
                        <a class=" mr-2 btn btn-info" href="/products/{{_id}}">View more</a>
                    </div>
                </div>
            </div>
        </div>
        {{!-- {{/each}} --}}
    </div>
    <div class="row">
        <a class="mt-3 btn btn-outline-secondary" href="/">Go back to Index </a>
    </div>

</div>