<h1 class="mb-5 mt-5 text-center product-list-h1">Products List</h1>
<section class="product-list mt-5">
    <div class="container">
        <div class="row mb-5">
            <div class=" col-12">
                <form class="form-search" action="/products" method="GET">
                    <input class="form-control input-search" type="search" placeholder="Search" aria-label="Search"
                        name="search">
                    <button class="btn btn-search" type="submit">Search</button>
                </form>
            </div>
        </div>
        <div class="row mb-5">
            {{#each allProducts}}
            <div class="col-sm-6 col-md-4 mb-5 ">
                <div class="card card-shadow">
                    <div class="card-body ">
                        <img class="card-img-top img-card" src="{{productImg.path}}" alt="{{name}}">
                        <h3 class=" card-header card-title mb-5">{{name}}</h3>
                        <div class="d-flex">
                            <a class=" mr-2 btn btn-product" href="/products/{{_id}}">View more</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <a class="mt-3 btn btn-outline-secondary" href="/">Back to Index </a>
        </div>
    </div>
</section>