    <div class="container">
        <div class="row d-flex align-items-center justify-content-around">
            <div class="col-md-4">
                <figure>
                    <img src="{{productImg.path}}" class=" img-product-detail" alt="{{name}}">
                </figure>
            </div>
            <div class="col-md-7">
                <h1>{{name}}</h1>
                <hr>
                <h2>Description</h2>
                <p>{{description}}</p>
                <p><strong>Price: </strong> {{price}} â‚¬ | <strong>Stock: </strong> {{stock}}</p>
