<div class="container">
    <h1 class="text-center">Edit Product</h1>
    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/profile/{{farm}}/edit-product/?id={{id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="description-input">Description</label>
                    <textarea name="description" class="form-control" id="description-input"
                        rows="3">{{description}}</textarea>
                </div>

                {{!-- IMG  --}}

                <img src="{{profileImg}}" alt="{{name}}">

                <div class='form-group'>
                    <div class="custom-file">
                        <input name="profileImg" type="file" class="custom-file-input" id="profileImg"
                            value="{{profileImg}}">
                        <label class="custom-file-label" for="profileImg">Select image</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="name-input">Price (â‚¬ euro/kg)</label>
                    <input name="price" type="number" class="form-control" id="name-input" value="{{price}}">
                </div>
                <div class="form-group">
                    <label for="name-input">Stock</label>
                    <input name="stock" type="number" class="form-control" id="name-input" value="{{stock}}">
                </div>


                {{!-- FARM where you can find it --}}


                <button type="submit" class="btn btn-dark">Edit Product</button>
                <a href="/profile" class="btn btn-dark">Go back</a>

            </form>
        </div>

    </div>
</div>