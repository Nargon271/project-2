<div class="container">

    <div class="row d-flex justify-content-center align-items-center">

        <div class="col-md-7">

            <h2 class="mb-5">Edit your farm page </h2>

            <form class="mb-5" method="POST" action="/profile/myfarm/{{farmInfo.id}}/edit"
                enctype="multipart/form-data">

                <div class="form-group">
                    <label>Farm Name</label>
                    <input type="text" class="form-control" name="farmname" value="{{farmInfo.farmname}}">
                </div>
                <div class="form-group">
                    <label for="description-input">Description</label>
                    <textarea name="description" class="form-control" id="description-input"
                        rows="3">{{farmInfo.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="address-input">Address</label>
                    <input name="address" type="text" class="form-control" id="address-input"
                        value="{{farmInfo.address}}">
                </div>
                <div class=" form-group">
                    <label for="latitude-input">Latitude</label>
                    <input name="latitude" type="text" class="form-control" id="latitude-input"
                        value="{{farmInfo.location.coordinates.[0]}}">
                </div>
                <div class="form-group">
                    <label for="longitude-input">Longitude</label>
                    <input name="longitude" type="text" class="form-control" id="longitude-input"
                        value="{{farmInfo.location.coordinates.[1]}}">
                </div>

                <img src="{{farmInfo.farmImg.path}}" alt="{{name}}">
                <div class='form-group'>
                    <div class="custom-file">
                        <input name="farmImg" type="file" class="custom-file-input" id="farmImg"
                            {{farmInfo.farmImg.path}}>
                        <label class="custom-file-label" for="farmImg">Select image</label>
                    </div>
                </div>


                <button type="submit" class="btn btn-success btn-block">Edit your farm</button>
            </form>
            <a class="mt-5 btn btn-outline-secondary" href="/profile">Go back</a>
        </div>
    </div>

</div>