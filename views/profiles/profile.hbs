<section class="your-profile mt-5">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-3 ">
                <img src="{{user.profileImg.path}}" class="img-profile rounded-circle" alt="{{user.name}}">
            </div>
            <div class="col-md-8">
                <hr>
                <h2>Welcome {{user.username}}!</h2>
                <p>{{user.description}}</p>
                <p><strong>Name:</strong> {{user.name}} {{user.surname}}</p>
                <p><strong>Role:</strong> {{user.role}}</p>
                <p><strong>Email:</strong> {{user.email}}
                <p></p>
                <p>{{user.address}}</p>
                {{#if isFarmer}}
                <a href="/profile/create-farm?id={{user.id}}" class="btn btn-farm mt-2">Create your farm profile</a>
                {{/if}}
                <a href="/profile/edit-user?id={{user.id}}" class="btn btn-info mt-2">Edit your profile</a>
                <a class="btn btn-danger mt-2" href="/profile/log-out">Log out</a>
                <hr>
            </div>
        </div>

        {{!-- your farms --}}
        {{#if isFarmer}}
        <h3 class="mt-3">Your Farms</h3>
        {{#each allFarms}}
        <div class="row mt-5">
            <div class="col-sm-6 col-md-4 mb-5 ">
                <div class="card ">
                    <div class="card-body ">
                        <img class="card-img-top" src="{{farmImg.path}}" alt="{{farmname}}">
                        <h3 class="mt-3">{{farmname}}</h3>
                        <div class="d-flex">
                            <a class=" mt-5 mr-2 btn btn-farm" href="/profile/myfarm/{{_id}}">My farm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each }}
        <hr>
        {{/if}}

        {{!-- favorites --}}
        <h3 class="mt-5">Your Favourite Farms</h3>
        <div class="row mt-2">
            {{#each userInfo}}
            <div class="col-sm-6 col-md-4">
                <div class="card ">
                    <div class="card-body ">
                        <img class="card-img-top" src="{{farmImg.path}}" alt="{{farmname}}">
                        <h3 class=" card-header card-title mb-5">{{farmname}}</h3>
                        <div class="d-flex">
                            <a class=" mr-2 btn btn-info" href="/profile/myfarm/{{_id}}">View more</a>

                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>