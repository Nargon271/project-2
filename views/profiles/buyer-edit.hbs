<div class="container">

    <div class="row d-flex justify-content-center align-items-center">

        <div class="col-md-7">

            <h2 class="mb-5">Edit your details </h2>

            <form class="mb-5" method="POST" action="/profile/edit-buyer?id={{farmInfo.id}}">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{farmInfo.name}}">
                </div>
                <div class="form-group">
                    <label>Surname</label>
                    <input type="text" class="form-control" name="surname" value="{{farmInfo.surname}}">
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="{{farmInfo.username}}">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" value="{{farmInfo.email}}">
                </div>
                <div class="form-group">
                    <label for="address-input">Address</label>
                    <input name="address" type="text" class="form-control" id="address-input"
                        value="{{farmInfo.address}}">
                </div>

                <div class='form-group'>
                    <div class="custom-file">
                        <input name="profileImg" type="file" class="custom-file-input" id="profileImg"
                            value="{{farmInfo.profileImg}}">
                        <label class="custom-file-label" for="profileImg">Select image</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-success btn-block">Edit your profile</button>
            </form>
            <a class="mt-5 btn btn-outline-secondary" href="/profile">Go back</a>
        </div>
    </div>

</div>