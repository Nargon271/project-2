<div class="container">

    <div class="row d-flex justify-content-center align-items-center">

        <div class="col-md-7">

            <h2 class="mb-5">Create your farm page </h2>

            <form class="mb-5" method="POST" action="/profile/create-farm?id={{userInfo.id}}">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{userInfo.name}}">
                </div>
                <div class="form-group">
                    <label>Surname</label>
                    <input type="text" class="form-control" name="surname" value="{{userInfo.surname}}">
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="{{userInfo.user.username}}">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" value="{{userInfo.email}}">
                </div>
                <div class="form-group">
                    <label>Farm Name</label>
                    <input type="text" class="form-control" name="farmname" value="{{userInfo.farmname}}">
                </div>
                <div class="form-group">
                    <label for="description-input">Description</label>
                    <textarea name="description" class="form-control" id="description-input"
                        rows="3">{{userInfo.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="address-input">Address</label>
                    <input name="address" type="text" class="form-control" id="address-input"
                        value="{{userInfo.address}}">
                </div>
                <div class="form-group">
                    <label for="latitude-input">Latitude</label>
                    <input name="latitude" type="text" class="form-control" id="latitude-input"
                        value="{{userInfo.location.coordinates.[0]}}">
                </div>
                <div class="form-group">
                    <label for="longitude-input">Longitude</label>
                    <input name="longitude" type="text" class="form-control" id="longitude-input"
                        value="{{userInfo.location.coordinates.[1]}}">
                </div>
                <div class='form-group'>
                    <div class="custom-file">
                        <input name="profileImg" type="file" class="custom-file-input" id="profileImg"
                            value="{{userInfo.profileImg}}">
                        <label class="custom-file-label" for="profileImg">Select image</label>
                    </div>
                </div>


                <button type="submit" class="btn btn-success btn-block">Create your farm</button>
            </form>
            <a class="mt-5 btn btn-outline-secondary" href="/profile">Go back</a>
        </div>
    </div>

</div>